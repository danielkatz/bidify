{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "target": "es2016",
      "sourceMap": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "types": [
        "node",
        "lodash",
        "chrome"
      ]
    },
    "presets": [
      "env",
      {
        "modules": false
      }
    ],
    "include": [
      "**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }